<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - NexPanel</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap"
        rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #ffffff;
            color: #000000;
        }

        .header {
            background: #000000;
            padding: 24px 40px;
            border-bottom: 2px solid #000000;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            color: #ffffff;
            font-size: 24px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .header h1 .logo {
            font-size: 28px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 24px;
            color: #ffffff;
        }

        .user-info span {
            font-size: 14px;
            font-weight: 500;
        }

        .user-info strong {
            font-weight: 700;
        }

        .logout-btn {
            padding: 10px 20px;
            background: #ffffff;
            color: #000000;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 600;
            border: 2px solid #ffffff;
            transition: all 0.2s ease;
        }

        .logout-btn:hover {
            background: #000000;
            color: #ffffff;
        }

        .container {
            max-width: 1400px;
            margin: 32px auto;
            padding: 0 40px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 24px;
            margin-bottom: 32px;
        }

        .stat-card {
            background: #ffffff;
            padding: 28px;
            border: 2px solid #000000;
            transition: all 0.2s ease;
        }

        .stat-card:hover {
            background: #000000;
            color: #ffffff;
        }

        .stat-card .icon {
            font-size: 36px;
            margin-bottom: 12px;
        }

        .stat-card h3 {
            color: inherit;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .stat-card .value {
            font-size: 36px;
            font-weight: 800;
            color: inherit;
            line-height: 1;
        }

        .section {
            background: #ffffff;
            padding: 32px;
            border: 2px solid #000000;
            margin-bottom: 24px;
        }

        .section h2 {
            margin-bottom: 24px;
            color: #000000;
            font-size: 20px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .nav-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 16px;
        }

        .nav-item {
            padding: 24px 20px;
            background: #000000;
            color: #ffffff;
            text-align: center;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
            border: 2px solid #000000;
        }

        .nav-item .icon {
            font-size: 28px;
        }

        .nav-item:hover {
            background: #ffffff;
            color: #000000;
        }

        @media (max-width: 768px) {
            .container {
                padding: 0 20px;
            }

            .header {
                padding: 20px;
            }

            .header h1 {
                font-size: 20px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .nav-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>

<body>
    <div class="header">
        <h1><span class="logo">üöÄ</span> NexPanel</h1>
        <div class="user-info">
            <span>Welcome, <strong>
                    <%= user.username %>
                </strong></span>
            <a href="/auth/logout" class="logout-btn">Logout</a>
        </div>
    </div>

    <div class="container">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="icon">üíª</div>
                <h3>CPU Usage</h3>
                <div class="value" id="cpu-usage">--</div>
            </div>
            <div class="stat-card">
                <div class="icon">üß†</div>
                <h3>Memory Usage</h3>
                <div class="value" id="mem-usage">--</div>
            </div>
            <div class="stat-card">
                <div class="icon">üíæ</div>
                <h3>Disk Usage</h3>
                <div class="value" id="disk-usage">--</div>
            </div>
            <div class="stat-card">
                <div class="icon">üåê</div>
                <h3>Active Websites</h3>
                <div class="value" id="websites-count">--</div>
            </div>
        </div>

        <div class="section">
            <h2>Quick Actions</h2>
            <div class="nav-grid">
                <a href="/websites" class="nav-item">
                    <span class="icon">üìÅ</span>
                    <span>Websites</span>
                </a>
                <a href="/databases" class="nav-item">
                    <span class="icon">üóÑÔ∏è</span>
                    <span>Databases</span>
                </a>
                <a href="/domains" class="nav-item">
                    <span class="icon">üåê</span>
                    <span>Domains</span>
                </a>
                <a href="/ssl" class="nav-item">
                    <span class="icon">üîí</span>
                    <span>SSL Certificates</span>
                </a>
                <a href="/files" class="nav-item">
                    <span class="icon">üìÇ</span>
                    <span>File Manager</span>
                </a>
                <a href="/backups" class="nav-item">
                    <span class="icon">üíæ</span>
                    <span>Backups</span>
                </a>
                <a href="/git" class="nav-item">
                    <span class="icon">üîÄ</span>
                    <span>Git</span>
                </a>
                <a href="/logs" class="nav-item">
                    <span class="icon">üìä</span>
                    <span>Logs</span>
                </a>
                <a href="/security" class="nav-item">
                    <span class="icon">üõ°Ô∏è</span>
                    <span>Security</span>
                </a>
                <a href="/apps" class="nav-item">
                    <span class="icon">‚ö°</span>
                    <span>One-Click Apps</span>
                </a>
            </div>
        </div>
    </div>

    <script>
        // Fetch stats every 30 seconds
        const fetchStats = async () => {
            try {
                const response = await fetch('/api/monitoring/stats');
                const data = await response.json();

                document.getElementById('cpu-usage').textContent = data.cpu.usage + '%';
                document.getElementById('mem-usage').textContent = data.memory.percent + '%';
                document.getElementById('disk-usage').textContent = data.disk.percent;
            } catch (error) {
                console.error('Failed to fetch stats:', error);
            }

            try {
                const response = await fetch('/api/websites');
                const websites = await response.json();
                document.getElementById('websites-count').textContent = websites.length;
            } catch (error) {
                console.error('Failed to fetch websites:', error);
            }
        };

        fetchStats();
        setInterval(fetchStats, 30000);
    </script>
</body>

</html>